<%- include('header') -%> 

    <div class="box" id="heading">
        <h1><%= dayTitle %> !</h1>
    </div>
    
    <div class="box" >
      <% listItems.forEach(item => { %>
        <form action="/delete" method="post">
            <div class="item">
            <input type="checkbox" name="checkboxValue" value="<%= item._id %> " onChange="this.form.submit()">
            <p> <%= item.task %></p>
            </div>
        <% }); %>
        <input type="hidden" name="listName" value=<%= dayTitle %>></input>
      </form>

        <form class = "item" action="/" method="post">
            <input type="text" name="item" placeholder="New Item" autocomplete="off">
            <button type="submit" name="submit" value= <%= dayTitle %> > + </button>
        </form>
    </div>

<%- include('footer') -%> 